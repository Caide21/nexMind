/* CALM FOG RESTORE */

.fog-dynamic {
  position: fixed;
  inset: 0;
  z-index: 99 !important;
  pointer-events: none;
  background-image: url('/fog.png');
  background-size: cover;
  background-position: center;
  background-repeat: repeat;
  mix-blend-mode: screen;
  transition: opacity 1s ease, filter 1s ease;
}


/* ðŸ’¡ Clarity = bright & calm */
.fog-clarity {
  opacity: 0.1;
  filter: brightness(1.4) blur(0.5px);
  background-color: rgba(0, 255, 200, 0.2);
  animation: none;
}

/* ðŸ•Š Silence = quiet grayscale */
.fog-silence {
  opacity: 0.05;
  filter: grayscale(1) blur(1px);
  background-color: rgba(255, 255, 255, 0.1);
  animation: none;
}

/* ðŸ”¥ Chaos = intense motion */
.fog-chaos {
  opacity: 0.6;
  filter: saturate(2.2) blur(8px) contrast(1.4) hue-rotate(10deg);
  background-color: rgba(255, 0, 0, 0.1);
  animation: pulse-fog 0.9s ease-in-out infinite alternate;
}

/* ðŸŒ€ Distortion = dreamy warping */
.fog-distortion {
  opacity: 0.4;
  filter: blur(5px) contrast(1.3) sepia(0.4) hue-rotate(-15deg);
  background-color: rgba(120, 80, 255, 0.15);
  animation: distort-fog 3s ease-in-out infinite;
}

/* Keyframes */
@keyframes pulse-fog {
  0%   { opacity: 0.4; transform: scale(1) rotate(0deg); }
  50%  { opacity: 0.7; transform: scale(1.06) rotate(2deg); }
  100% { opacity: 0.4; transform: scale(1) rotate(-1deg); }
}

@keyframes distort-fog {
  0%   { filter: blur(2px) contrast(1.1) hue-rotate(0deg); }
  33%  { filter: blur(5px) contrast(1.4) hue-rotate(10deg); }
  66%  { filter: blur(4px) contrast(1.3) hue-rotate(-8deg); }
  100% { filter: blur(2px) contrast(1.1) hue-rotate(0deg); }
}


